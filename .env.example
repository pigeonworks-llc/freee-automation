# =============================================================================
# Accounting System Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# freee API Configuration
# -----------------------------------------------------------------------------
# Get OAuth2 credentials from: https://developer.freee.co.jp/
FREEE_CLIENT_ID=your_client_id_here
FREEE_CLIENT_SECRET=your_client_secret_here
FREEE_REDIRECT_URI=http://localhost:3000/callback

# After OAuth authentication, you'll get these values
FREEE_ACCESS_TOKEN=your_access_token_here
FREEE_COMPANY_ID=1

# freee API endpoint (use emulator for development)
FREEE_API_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# Beancount Configuration
# -----------------------------------------------------------------------------
# Root directory for all Beancount files
BEANCOUNT_ROOT=./beancount

# Database for sync history (optional, defaults to BEANCOUNT_ROOT/.sync/sync.db)
BEANCOUNT_DB_PATH=./beancount/.sync/sync.db

# Directory for document attachments (optional, defaults to BEANCOUNT_ROOT/attachments)
BEANCOUNT_ATTACHMENTS_DIR=./beancount/attachments

# -----------------------------------------------------------------------------
# Amazon Receipt Processor Configuration
# -----------------------------------------------------------------------------
# Directory where Amazon receipt PDFs are downloaded
AMAZON_DOWNLOAD_DIR=/Users/username/Downloads

# PDF filename pattern to match
AMAZON_PDF_PATTERN=領収書*.pdf

# Playwright session data directory (login state saved here)
AMAZON_USER_DATA_DIR=./playwright-data

# Directory to store processed documents (deprecated, use BEANCOUNT_ATTACHMENTS_DIR)
# DOCUMENTS_DIR=./documents

# -----------------------------------------------------------------------------
# Development & Debugging
# -----------------------------------------------------------------------------
# Enable debug logging
DEBUG=false

# Node environment
NODE_ENV=development
